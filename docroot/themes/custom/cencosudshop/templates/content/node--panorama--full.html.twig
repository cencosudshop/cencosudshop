<div class="content">
    <div class="row mb-3">
        <div class="col-md-6 order-md-2 mb-3">
            <img src="{{ file_url(node.field_imagen_panorama.entity.fileuri) }}"  height="300" width="100">
        </div>
        <div class="col-md-6 order-md-1">
            <h4><strong>{{ node.title.value }}</strong></h4>
            <p ><i class="far fa-calendar-alt"></i> Desde {{ node.field_vigencia_panorama.value|date(format='d/m/Y') }} Hasta {{ node.field_vigencia_panorama.end_value|date(format='d/m/Y') }}</p>                
            <p >{{ node.field_descripcion_panorama.value }}</p>
            
            <p><i class="far fa-clock"></i> {{ node.field_horario_panorama.value }}</p>
            <p><i class="fas fa-map-marker-alt"></i> {{ node.field_ubicacion_panorama.value }}</p>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-6 order-md-2 mb-3">
            <div id="carouselpanoramas" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    {%- for item in node.field_panorama_slideshow -%}
                    {% if loop.first %}
                        <div class="carousel-item active">
                            <img  class="" src="{{ file_url(item.entity.fileuri) }}"  alt="First slide">            
                        </div>
                    {% else %}
                        <div class="carousel-item">
                            <img  class="" src="{{ file_url(item.entity.fileuri) }}" >         
                        </div>
                    {% endif %}
                    {%- endfor -%}
                </div>
                <a class="carousel-control-prev" href="#carouselpanoramas" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselpanoramas" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div> <!-- End carousel-->
        </div>
        <div class="col-md-6 order-md-1">
            <h4 class=""><strong>Panoramas Recomendados</strong></h4>
            <div class="panoramas_reco-container">
                {{ drupal_view('panoramas_recomendados', 'block_1') }}
            </div>
        </div>
    </div>
</div>
