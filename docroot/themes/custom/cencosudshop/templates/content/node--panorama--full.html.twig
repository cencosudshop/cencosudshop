<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6" style="margin-top: 20px;float: left;">
                <div class="col-md-12">
                   <h4>{{ node.title.value }}</h4>
                   <p style="font-size:12px;"><i class="far fa-clock"></i> Desde {{ node.field_vigencia_panorama.value|date(format='d/m/Y') }} Hasta {{ node.field_vigencia_panorama.end_value|date(format='d/m/Y') }}</p>                
                   <p style="text-align:justify;">{{ node.field_descripcion_panorama.value }}</p>
                   <p><i class="far fa-clock"></i> {{ node.field_horario_panorama.value }}</p>
                   <p><i class="fas fa-map-marker-alt"></i> {{ node.field_ubicacion_panorama.value }}</p>
                </div>
            </div>
            <div class="col-md-6" style="float:left;margin-bottom:10%;">
                  <img src="{{ file_url(node.field_imagen_panorama.entity.fileuri) }}"  height="300" width="100">                                  
                <div id="carouselpanoramas" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                      {%- for item in node.field_panorama_slideshow -%}
                        {% if loop.first %}
                            <div class="carousel-item active">
                               <img  class="d-block w-100" src="{{ file_url(item.entity.fileuri) }}"  alt="First slide">            
                            </div>
                          {% else %}
                          <div class="carousel-item">
                              <img  class="d-block w-100" src="{{ file_url(item.entity.fileuri) }}" >         
                          </div>
                        {% endif %}
                      {%- endfor -%}
                   </div>                 
                   
                      <a class="carousel-control-prev" href="#carouselpanoramas" role="button" data-slide="prev">
                         <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                         <span class="sr-only">Previous</span>
                      </a>
                      <a class="carousel-control-next" href="#carouselpanoramas" role="button" data-slide="next">
                         <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                       </a>           
                </div>             
        </div><br> 
        <div class="col-md-12" style="height:auto;float:left;">
            <div class="imagen-promocion">{{ drupal_view('panoramas_recomendados', 'block_1') }} </div>
        </div>
               

    </div>
</div>

