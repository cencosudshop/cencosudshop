<style>
#titulo_promociones{
  display:none;
}
</style>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-5" style="float:left;margin-bottom:10px;">
                <div class="col-md-12">
                    <div class="col-md-4" style="height:100px;margin-top: 20px;float: left;">
                        <img src="{{ file_url(node.field_tienda_asociada.entity.field_logo_tienda.entity.fileuri) }}"  height="100" width="100">  
                    </div>
                    <div class="col-md-8" style="float:left;margin-top: 20px;">
                        <div class="col-md-12">
                           <h4>{{ node.field_tienda_asociada.entity.title.value }}</h4>
                           <p>{{ node.title.value }}</p>
                           <p style="font-size:12px;"><i class="far fa-clock"></i> Desde {{ node.field_vigencia_promocion.value|date(format='d/m/Y') }} Hasta {{ node.field_vigencia_promocion.end_value|date(format='d/m/Y') }}</p>
                        </div>
                    </div>
               </div>
               <div class="col-md-12" style="margin-top: 10px; float:left">
                   <p class="text-justify">{{ node.field_descripcion_promocion.value }}</p>
               </div>
               <div class="col-md-12" style="margin-top: 10px; float:left">
                {% set idtienda = node.field_tienda_asociada.entity.nid.value %}
                <button type="button" class="btn btn-info">{{drupal_view('enlace_tienda_promocion', 'block_1', idtienda)}}</button>
                  
               </div>
            </div>
            <div class="col-md-7" style="float:left;margin-bottom:10px;">
               <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                   <div class="carousel-inner">
                      {%- for item in node.field_imagen_promocion -%}
                        {% if loop.first %}
                            <div class="carousel-item active">
                               <img  class="d-block w-100" src="{{ file_url(item.entity.fileuri) }}"  alt="First slide">            
                            </div>
                          {% else %}
                          <div class="carousel-item">
                              <img  class="d-block w-100" src="{{ file_url(item.entity.fileuri) }}" >         
                          </div>
                        {% endif %}
                      {%- endfor -%}
                   </div>                 
                </div>
                   <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                   </a>
                   <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                   </a>
            </div>
         </div>
     </div><br>
     <div class="row">
         <h6>Promociones Recomendadas</h6>
         <div class="col-md-12" style="height:auto;">
            {{ drupal_view('promociones_recomendadas', 'block_1') }}
          </div>
         </div>
     </div>
</div>